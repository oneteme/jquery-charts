{
  "$schema": "../../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../../dist/oneteme/jquery-highcharts",
  "assets": [
    {
      "glob": "**/*.scss",
      "input": "src/assets/styles",
      "output": "./styles"
    },
    {
      "glob": "**/*.css", 
      "input": "src/assets/styles",
      "output": "./styles"
    },
    {
      "glob": "**/*.svg",
      "input": "src/assets/icons",
      "output": "./icons"
    }
  ],
  "lib": {
    "entryFile": "src/public-api.ts"
  }
}
